<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/background_shape"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        tools:layout_editor_absoluteY="25dp">

    <android.support.v7.widget.CardView
            android:background="#142834"
            android:layout_margin="5dp"
            app:cardCornerRadius="8dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/cardView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:background="#142834"
                android:layout_height="match_parent">


            <ImageView android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:id="@+id/imageView2"
                       android:scaleType="fitXY"
                       android:src="@drawable/tab_selector"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       tools:srcCompat="@tools:sample/backgrounds/scenic[9]"
                       app:layout_constraintHorizontal_bias="0.0"
                       app:layout_constraintVertical_bias="1.0"
                       app:layout_constraintBottom_toTopOf="@+id/textiew"/>

            <TextView android:layout_width="120dp"
                      android:layout_height="wrap_content"
                      android:textColor="#fff"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:layout_marginEnd="8dp"
                      android:layout_marginRight="8dp"
                      app:layout_constraintStart_toStartOf="parent"
                      android:layout_marginLeft="8dp"
                      android:layout_marginStart="8dp"
                      android:id="@+id/name"
                      android:fontFamily="@font/book"
                      android:text="Free Spirit"
                      android:layout_marginTop="8dp"
                      app:layout_constraintTop_toTopOf="parent"
                      android:textSize="24sp"
                      android:layout_marginBottom="8dp"
                      android:minLines="2"
                      app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                      android:gravity="center_horizontal"
                      app:layout_constraintHorizontal_bias="0.497"
                      app:layout_constraintVertical_bias="0.425"/>

            <TextView
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:textColor="#fff"
                    android:layout_height="wrap_content"
                    android:id="@+id/textiew"
                    android:text="text"
                    android:fontFamily="@font/light"
                    app:layout_constraintStart_toStartOf="@+id/imageView2"
                    android:layout_marginBottom="28dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/imageView2"
                    app:layout_constraintHorizontal_bias="0.51"/>
            <TextView
                    android:text="4:40 mins"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    android:fontFamily="@font/light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/duration"
                    app:layout_constraintEnd_toEndOf="@+id/name"
                    app:layout_constraintTop_toBottomOf="@+id/textiew"
                    android:layout_marginEnd="28dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                    app:layout_constraintVertical_bias="1.0"
                    android:layout_marginRight="28dp"
            />
            <ImageView
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_media_play"
                    android:id="@+id/imageView3"
                    app:layout_constraintBottom_toBottomOf="@id/duration"
                    app:layout_constraintEnd_toStartOf="@+id/duration"
                    app:layout_constraintStart_toStartOf="@+id/name"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintTop_toTopOf="@+id/duration"
                    app:layout_constraintStart_toEndOf="@+id/imageView2"
                    app:layout_constraintVertical_bias="0.428"
                    android:layout_marginBottom="2dp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_lock_idle_lock"
                    android:id="@+id/lock_image"

                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>