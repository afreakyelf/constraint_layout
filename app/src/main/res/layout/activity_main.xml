<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:fillViewport="true"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0d3349"
            tools:context=".MainActivity">


        <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:srcCompat="@tools:sample/backgrounds/scenic[11]"/>

        <TextView
                android:textStyle="bold"
                android:text="@string/music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/music"
                android:textColor="#fff"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:textSize="25dp"/>
        <TextView
                android:text="TextView"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_marginTop="68dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="32dp"
                android:layout_marginStart="32dp"/>
        <TextView
                android:text="TextView"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                android:textSize="20sp"/>
        <TextView
                android:text="TextView"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:layout_marginTop="3dp"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:layout_constraintStart_toStartOf="@+id/textView3"/>
        <TextView
                android:text="|"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView4"
                app:layout_constraintStart_toEndOf="@+id/textView4"
                android:layout_marginStart="5dp"/>
        <TextView
                android:text="TextView"
                android:layout_marginLeft="5dp"
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:textColor="#fff"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView7"
                android:layout_marginStart="5dp"/>
        <TextView
                android:textColor="#fff"
                android:text="@string/top_categories"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                app:layout_constraintBottom_toBottomOf="@id/imageView"
                app:layout_constraintStart_toStartOf="@+id/textView4"
                android:textSize="25sp"
        />

        <android.support.v7.widget.RecyclerView
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_height="100dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/textView10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/recyclerView"
                android:layout_marginStart="20dp"/>

        <android.support.design.widget.TabLayout
                android:layout_width="0dp"
                app:tabGravity="fill"
                app:tabMode="scrollable"
                android:layout_height="40dp"
                app:layout_constraintStart_toStartOf="@+id/recyclerView"
                app:layout_constraintTop_toBottomOf="@+id/recyclerView"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="9dp"
                app:tabTextColor="#fff"
                android:layout_marginRight="24dp"
                app:tabIndicatorColor="#00ffffff"
                app:tabBackground="@drawable/tab_selector"
                android:id="@+id/tab_layout"

        >

            <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/recommended"/>
            <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/new"/>
            <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/trending"/>
            <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fav"/>
        </android.support.design.widget.TabLayout>

        <android.support.v7.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/recyclerView"
                app:layout_constraintTop_toBottomOf="@+id/tab_layout"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="@+id/tab_layout"/>
        <RelativeLayout
                android:padding="8dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="108dp"
                android:background="@drawable/play_shape"
                android:layout_height="33dp"
                app:layout_constraintStart_toEndOf="@+id/music"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintTop_toTopOf="@+id/textView3"
                app:layout_constraintBottom_toBottomOf="@+id/textView3"
        >
            <ImageView

                    android:scaleType="centerCrop"
                    android:layout_width="15dp"
                    android:id="@+id/a"

                    android:layout_height="25dp"
                    android:src="@android:drawable/ic_media_play"/>

            <TextView
                    android:id="@+id/b"
                    android:layout_toRightOf="@id/a"
                    android:layout_width="wrap_content"
                    android:gravity="top"
                    android:layout_marginLeft="10dp"
                    android:textColor="#fff"
                    android:layout_height="match_parent"
                    android:text="@string/play_now"
                    android:layout_toEndOf="@id/a"
                    android:layout_marginStart="10dp"/>

        </RelativeLayout>


    </android.support.constraint.ConstraintLayout>
</ScrollView>